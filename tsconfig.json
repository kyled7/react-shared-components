{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"jsx": "react",
		"outDir": "build",
		"rootDir": "src",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"allowJs": false,
		"sourceMap": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"types": [
			"react"
		]
	},
	"types": [
		"react"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}